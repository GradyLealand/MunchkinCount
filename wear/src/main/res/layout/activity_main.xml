<?xml version="1.0" encoding="utf-8"?>
<android.support.wearable.view.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gradywilliams.munchkincounter.MainActivity"
    tools:deviceIds="wear">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="58dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <Button
                android:id="@+id/btnGearUp"
                android:layout_width="match_parent"
                android:layout_height="93px"
                android:layout_weight="0.11"
                android:onClick="gearUp"
                android:text="+"
                android:textSize="30sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <EditText
                android:id="@+id/textGear"
                android:layout_width="match_parent"
                android:layout_height="93px"
                android:layout_weight="0.29"
                android:ems="10"
                android:inputType="textPersonName"
                android:singleLine="false"
                android:text="0"
                android:textAlignment="center" />

            <Button
                android:id="@+id/btnGearDown"
                android:layout_width="match_parent"
                android:layout_height="93px"
                android:layout_weight="0.11"
                android:onClick="gearDown"
                android:text="-"
                android:textSize="30sp"
                android:textStyle="bold"
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/LableTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:ems="10"
                android:inputType="textMultiLine"
                android:text="TOTAL POWER"
                android:textAlignment="center"
                android:textSize="10sp" />

            <EditText
                android:id="@+id/textTotal"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_weight="0.66"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="1"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/textEmpty"
                android:layout_width="match_parent"
                android:layout_height="93px"
                android:layout_weight="0.04"
                android:ems="10"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.11"
            android:orientation="vertical"
            android:weightSum="1">

            <Button
                android:id="@+id/btnLevelUp"
                android:layout_width="match_parent"
                android:layout_height="93px"
                android:layout_weight="0.11"
                android:onClick="levelUp"
                android:text="+"
                android:textSize="30sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <EditText
                android:id="@+id/textLevel"
                android:layout_width="match_parent"
                android:layout_height="93px"
                android:layout_weight="0.29"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="1"
                android:textAlignment="center" />

            <Button
                android:id="@+id/btnLevelDown"
                android:layout_width="match_parent"
                android:layout_height="93px"
                android:layout_weight="0.11"
                android:onClick="levelDown"
                android:text="-"
                android:textSize="30sp"
                android:textStyle="bold"
                android:visibility="visible" />

        </LinearLayout>

    </LinearLayout>
</android.support.wearable.view.BoxInsetLayout>
